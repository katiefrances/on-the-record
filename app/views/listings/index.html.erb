  <h1>Listings</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Album image</th>
        <th>Artist</th>
        <th>Album</th>
        <th>Description</th>
        <th>Category</th>
        <th>Price</th>
        <th>Shipping</th>
        <th colspan="3"></th>
